<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="HoneyCal\Habits\Domain\Action" table="actions">
        <id name="id" type="course_id" column="id" length="36" />

        <embedded name="title" class="HoneyCal\Habits\Domain\ActionTitle" use-column-prefix="false" />
        <embedded name="recurrence" class="HoneyCal\Habits\Domain\Recurrence" use-column-prefix="false" />
        <embedded name="created_at" class="HoneyCal\Habits\Domain\ValueObjects\Action\CreatedAtValueObject" use-column-prefix="false" />
        <embedded name="next_occurrence" class="HoneyCal\Habits\Domain\ValueObjects\Action\NextOccurrenceValueObject" use-column-prefix="false" />
    </entity>
</doctrine-mapping>
